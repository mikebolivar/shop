<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Image</th>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
      <th>Place</th>
      <th>Rating</th>
      <th>No likes</th>
      <th>No shareds</th>
      <th>No views</th>
      <th>No comments</th>
      <th>Public</th>
      <th>Shopify article</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.type %></td>
        <td><%= post.image %></td>
        <td><%= post.author %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.place %></td>
        <td><%= post.rating %></td>
        <td><%= post.no_likes %></td>
        <td><%= post.no_shareds %></td>
        <td><%= post.no_views %></td>
        <td><%= post.no_comments %></td>
        <td><%= post.public %></td>
        <td><%= post.shopify_article_id %></td>
        <td><%= post.user %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
